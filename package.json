{
  "name": "ngx-qrcode-svg",
  "version": "0.0.0",
  "description": "Angular component library to generate QR codes with SVG rendering",
  "author": "Katharina Koal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katharinakoal/ngx-qrcode-svg.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "run-p \"build:lib -- --watch\" serve:demo",
    "serve:demo": "ng serve --project=ngx-qrcode-svg-demo",
    "build:demo": "ng build --project=ngx-qrcode-svg-demo",
    "build:lib": "ng build --project=ngx-qrcode-svg",
    "build:lib:prod": "run-s \"ng build --project=ngx-qrcode-svg --prod\" copy-license copy-readme",
    "deploy:demo": "ng deploy --project=ngx-qrcode-svg-demo",
    "test:demo": "ng test --project=ngx-qrcode-svg-demo",
    "test:lib": "ng test --project=ngx-qrcode-svg",
    "test": "run-p test:demo test:lib",
    "build": "run-p build:demo build:lib",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "copy-license": "copy .\\LICENSE .\\dist\\ngx-qrcode-svg",
    "copy-readme": "copy .\\README.md .\\dist\\ngx-qrcode-svg"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.1.1",
    "@angular/common": "~9.1.1",
    "@angular/compiler": "~9.1.1",
    "@angular/core": "~9.1.1",
    "@angular/forms": "~9.1.1",
    "@angular/platform-browser": "~9.1.1",
    "@angular/platform-browser-dynamic": "~9.1.1",
    "@angular/router": "~9.1.1",
    "qrcode": "^1.4.4",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.1",
    "@angular-devkit/build-ng-packagr": "~0.901.1",
    "@angular/cli": "~9.1.1",
    "@angular/compiler-cli": "~9.1.1",
    "@angular/language-service": "~9.1.1",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.12.35",
    "angular-cli-ghpages": "^0.6.2",
    "codelyzer": "^5.1.2",
    "husky": "^4.2.5",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~3.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "ng-packagr": "^9.1.1",
    "npm-run-all": "^4.1.5",
    "protractor": "~5.4.3",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~3.8.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 120
  }
}
